<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="root" spacing="20" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="xyz.reisminer.keepteamsonline.LogicController" onKeyPressed="#toggleActiveBtnClick">
    <padding>
        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
    </padding>
    <HBox id="cbx-wrapper" spacing="20">
        <CheckBox fx:id="mouseWiggleCbx" selected="true" styleClass="cbx" text="Mouse Wiggle" />
        <CheckBox fx:id="randomInputCbx" styleClass="cbx" text="Write Random Letters" />
    </HBox>
    <HBox id="bottom-wrapper" alignment="CENTER_LEFT" spacing="10">
        <TextField id="random-input" fx:id="randomLettersInput" maxWidth="150" minWidth="75" promptText="Random Input goes here" />
        <Button id="toggle-btn" fx:id="toggleActiveBtn" alignment="CENTER" maxWidth="150" minWidth="150" onAction="#toggleActiveBtnClick" text="Start!" />
    </HBox>

</VBox>
